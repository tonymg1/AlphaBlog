 <%= form_with scope: :category, class:"shadow p-3 mb-3 bg-info rounded", url: categories_path, local: true do |f| %>
      <div class="container">
        <div class="form-group row mt-3">
          <%= f.label :name, "Category name", class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control", placeholder:"Enter a name" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center mt-2">
          <%= f.submit class:"col-2 btn btn-outline-light btn-lg"%>
        </div>
      </div>
    <% end %>